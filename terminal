# Core Dependencies
npm install next@latest react@latest react-dom@latest typescript@latest

# Authentication & Database
npm install next-auth @next-auth/mongodb-adapter mongodb mongoose

# UI Components & Styling
npm install @shadcn/ui @radix-ui/react-dialog @radix-ui/react-dropdown-menu @radix-ui/react-slot
npm install @radix-ui/react-avatar @radix-ui/react-toast tailwindcss
npm install class-variance-authority clsx tailwind-merge lucide-react

# Form Handling & Validation
npm install react-hook-form @hookform/resolvers zod

# File Upload & Real-time Communication
npm install cloudinary socket.io socket.io-client

# Install shadcn/ui CLI
npx shadcn-ui@latest init

# Install required components
npx shadcn-ui@latest add button
npx shadcn-ui@latest add card
npx shadcn-ui@latest add avatar
npx shadcn-ui@latest add dropdown-menu

# Core UI Dependencies
npm install @radix-ui/react-icons
npm install @radix-ui/themes
npm install next-themes
npm install tailwind-variants
npm install @acertinity/ui

# Additional UI Components
npx shadcn-ui@latest add theme-toggle
npx shadcn-ui@latest add sheet
npx shadcn-ui@latest add separator
npx shadcn-ui@latest add skeleton

# Install react-icons for tech stack icons
npm install react-icons

# Install additional shadcn components
npx shadcn-ui@latest add hover-card
npx shadcn-ui@latest add badge

# Install dialog, input, and textarea components
npx shadcn-ui@latest add dialog
npx shadcn-ui@latest add input
npx shadcn-ui@latest add textarea

# If you get any dependency errors, install these first
npm install @radix-ui/react-dialog
npm install @radix-ui/react-label
npm install class-variance-authority clsx tailwind-merge

npm run dev

# Start MongoDB (if using MongoDB Community Edition)
mongod --dbpath /path/to/your/data/directory

# First, install the required dependencies
npm install @radix-ui/react-toast

# Then install the toast component using the correct package name
npx shadcn-ui@latest add toast
